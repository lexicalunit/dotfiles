#!/bin/bash

# Fetch and fast-forward to the latest for origin/master.

usage() {
    (
        echo "usage: ${0##*/} [-h|--help] [-r]"
        echo "Fetch and fast-forward to the latest for origin/master."
        echo
        echo "options:"
        (
            echo "    -h, --help: show usage help"
        ) | column -ts:
    ) >&2
    exit 1
}

if echo "$*" | grep -Eq -- "\\b--help\\b|\\b-h\\b"; then
    usage
fi

while getopts "r" opt; do
    case "$opt" in
        *) usage ;;
    esac
done
shift $((OPTIND - 1))

set -ue
git checkout --quiet --detach
git fetch --prune origin master:master
git checkout --quiet -
