#!/bin/bash

# Rebase branch on the latest changes for the remote parent branch.

usage() {
    (
        echo "usage: ${0##*/} [-h|--help] [-r]"
        echo "Rebase branch on the latest changes for the remote parent branch."
        echo
        echo "options:"
        (
            echo "    -h, --help: show usage help"
        ) | column -ts:
    ) >&2
    exit 1
}

if echo "$*" | grep -Eq -- "\\b--help\\b|\\b-h\\b"; then
    usage
fi

while getopts "r" opt; do
    case "$opt" in
        *) usage ;;
    esac
done
shift $((OPTIND - 1))

# shellcheck source=../.shell_control
# shellcheck disable=1091
source "$HOME/.shell_control" || echo "$(tput bold)error: ~/.shell_control not installed!$(tput sgr0)" >&2

BRANCH="$(git rev-parse --abbrev-ref HEAD)"
if [[ "$BRANCH" == "master" || "$BRANCH" == "develop" ]];
    then abort "$BRANCH is not a topic branch"
fi

set -ue
PARENT="$(git parent)"
run "git sync && git rebase origin/$PARENT"
