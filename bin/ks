#!/bin/bash -e

# Sometimes spring server gets caddywhompus, this script kills it.

usage() {
    echo "usage: ${0##*/} [options]" 1>&2
    echo "" 1>&2
    echo "Sometimes spring server gets caddywhompus, this script kills it." 1>&2
    echo ""
    echo "options:"
    echo " -h or --help shows usage help" 1>&2
    exit 1
}

if echo "$*" | grep -Eq -- '--help\b|-h\b'; then
    usage
fi

# shellcheck source=.shell_control
# shellcheck disable=SC1091
source "$HOME/.shell_control" || echo "$(tput bold)error: ~/.shell_control not installed!$(tput sgr0)" >&2

run "die spring"
run "find /var/folders -type d -iname 'spring-[0-9]*' -print0 2>/dev/null | xargs -0 rm -rf"
