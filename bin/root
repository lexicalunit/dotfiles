#!/bin/bash

# Prints the root of the current repository.

if echo "$*" | grep -Eq -- "\\b--help\\b|\\b-h\\b"; then
    echo "usage: ${0##*/} [-h|--help]" 1>&2
    echo "Prints the root directory of the current source repository." 1>&2
    exit 1
fi

function abort_root() {
    echo "unknown" 1>&2
    exit 1
}

if [[ -f /usr/local/etc/bash_completion.d/git-prompt.sh ]]; then
    source /usr/local/etc/bash_completion.d/git-prompt.sh
else
    abort_root
fi

branch=$(type __git_ps1 &>/dev/null && __git_ps1 "%s")

if [[ -n "$branch" ]]; then
    vcs=git
else
    branch=$(type -P hg &>/dev/null && hg branch 2>/dev/null)
    if [[ -n "$branch" ]]; then
        vcs=hg
    elif [[ -e .bzr ]]; then
        vcs=bzr
    elif [[ -e .svn ]]; then
        vcs=svn
    else
        vcs=
    fi
fi

if [[ -n "$vcs" ]]; then
    if [[ "$vcs" == "hg" ]]; then
        hg root
    elif [[ "$vcs" == "git" ]]; then
        git rev-parse --show-toplevel
    else
        abort_root
    fi
fi
